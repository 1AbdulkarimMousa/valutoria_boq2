<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Form View Extension -->
    <record id="view_sale_order_form_boq" model="ir.ui.view">
        <field name="name">sale.order.form.boq</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add BOQ button to button box -->
            <div name="button_box" position="inside">
                <button name="action_view_boq" type="object"
                        class="oe_stat_button" icon="fa-list-alt"
                        invisible="not boq_id">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">BOQ</span>
                    </div>
                </button>
            </div>
            
            <!-- Add BOQ field in other info -->
            <field name="validity_date" position="after">
                <field name="boq_id" readonly="1" invisible="not from_boq"/>
                <field name="from_boq" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>