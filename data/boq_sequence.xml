<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- BOQ Project Sequence -->
    <record id="seq_boq_project" model="ir.sequence">
        <field name="name">BOQ Project</field>
        <field name="code">boq.project</field>
        <field name="prefix">BOQ</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- BOQ Subcontract Sequence -->
    <record id="seq_boq_subcontract" model="ir.sequence">
        <field name="name">BOQ Subcontract</field>
        <field name="code">boq.subcontract</field>
        <field name="prefix">SUB</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Payment Certificate Sequence -->
    <record id="seq_boq_payment_certificate" model="ir.sequence">
        <field name="name">BOQ Payment Certificate</field>
        <field name="code">boq.payment.certificate</field>
        <field name="prefix">PC</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Variation Order Sequence -->
    <record id="seq_boq_variation" model="ir.sequence">
        <field name="name">BOQ Variation</field>
        <field name="code">boq.variation</field>
        <field name="prefix">VAR</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>
</odoo>