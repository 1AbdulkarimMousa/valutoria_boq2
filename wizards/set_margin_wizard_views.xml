<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Set Margin Wizard Form -->
    <record id="view_set_margin_wizard_form" model="ir.ui.view">
        <field name="name">boq.set.margin.wizard.form</field>
        <field name="model">boq.set.margin.wizard</field>
        <field name="arch" type="xml">
            <form string="Set Margin">
                <group>
                    <field name="boq_id" readonly="1"/>
                    <field name="margin_percent" widget="percentage"/>
                    <field name="apply_to"/>
                    <field name="override_existing"/>
                </group>
                <footer>
                    <button name="action_set_margin" string="Apply Margin" 
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>